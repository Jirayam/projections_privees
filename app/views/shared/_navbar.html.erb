<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
  <i class="fas fa-couch"> PP</i>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <% if !user_signed_in? %>
            <%= link_to "Sign in", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      <li class="nav-item dropdown">
        <% if current_user && (current_user[:avatar] != nil) %>
            <%= cl_image_tag current_user.avatar, fetch_format: :auto, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              <%= link_to "Editer profil", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Mes réservations", bookings_path, class: "dropdown-item" %>
              <%= link_to "Créer une projection", new_host_viewing_path, class: "dropdown-item"  %>
              <%= link_to "Mes projections", host_bookings_path, class: "dropdown-item" %>
        <% elsif %>
        <% current_user && (current_user[:avatar] == nil) %>
              <%= image_tag('avatar_defaut.jpg', class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false, height: 40, crop: :fit )  %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              <%= link_to "Editer profil", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Mes réservations", bookings_path, class: "dropdown-item" %>
              <%= link_to "Créer une projection", new_host_viewing_path, class: "dropdown-item"  %>
              <%= link_to "Mes projections", host_bookings_path, class: "dropdown-item" %>
              </div>
        <% end %>
      </li>
    </ul>
  </div>
</div>
