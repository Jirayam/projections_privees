<div class="container">
  <h1>Modifier une projection:</h1>
  <%= simple_form_for [:host, @viewing] do |f| %>
    <%= f.input :movie_info %>
    <%= f.input :capacity %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.input :date %>
    <%= f.input :price %>
    <%= f.submit "modifier une projection", class: "btn btn-primary" %>
  <% end %>
</div>
