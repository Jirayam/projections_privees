<%= render 'shared/banner' %>
<div class="container">
  <div class="d-flex justify-content-between">
    <div class="cards">
      <% @viewings.each do |viewing| %>
        <%= link_to viewing_path(viewing) do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= viewing.user.photo.url %>)">
            <%= viewing.movie_info %>
          </div>
          <% end %>
      <% end %>
    </div>
    <div
    id="map"
    style="width: 400px;
    height: 500px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>
